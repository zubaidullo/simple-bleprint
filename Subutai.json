{
  "name": "${envName}",
  "description": "wordpress",
  "version": "1.0.1",
  "author": "Sydyk",
  "containers": [
    {
      "hostname": "ubutnu161",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "SMALL"
    },
    {
      "hostname": "ubuntu162",
      "template": "debian-stretch",
      "peer-criteria": "HTTP-GROUP",
      "size": "SMALL",
      "port-mapping": [
        {
          "protocol": "HTTPS",
          "domain": "${domain}",
          "internal-port": "80",
          "external-port": "${externalPort}"
        }
      ]
    }
  ],
  "peer-criteria": [
    {
      "name": "HTTP-GROUP",
      "max-price": "100"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/platium/simple-bleprint/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      {
        "key": "key1",
        "value": "value1"
      }
    ],
    "groups": [
      {
        "name": "db",
        "hostnames": [
          "ubutnu161"
        ]
      }
    ]
  },
  "user-variables": {
    "domain": {
      "description": "Select your domain or create new one",
      "type": "domain",
      "default": "wordpress.envs.subutai.cloud",
      "validation": "[a-zA-Z0-9.-]+"
    },
     "externalPort": {
      "description": "External port",
      "type": "int",
      "default": "80",
      "validation": "\\d+"
    },
    "envName": {
      "description": "Enter your environment name",
      "type": "string",
      "default": "wordpress env",
      "validation": "[a-zA-Z0-9]+"
    }
  }
}
